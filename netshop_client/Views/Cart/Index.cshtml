@{
    ViewData["Title"] = "My Cart";
}

<h2>My Cart</h2>
<h3>Total: @ViewData["total"]€</h3>

<table class="table table-hover table-striped table-responsive table-bordered">
	<thead>
		<tr>
			<th>Product</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in (List<string>)ViewData["CartProducts"])
		{
		string id_product = item.Split('-').First();
        <tr>
			<td>@item.Split('-').Last()</td>                  
			<td>
				<a href='/Cart/@Model.CartId/Remove/@id_product' class="btn btn-danger">Delete</a>
			</td>
		</tr>
		}
	</tbody>
</table>