@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit product</h2>
<form asp-controller="Product" asp-action="EditPost" method="post">
	<input type='hidden' name="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input class='form-control' type='text' name="Name" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input class='form-control' type="number" step="0.01" name="Price" value="@Model.Price" />
    </div>
    
    <div class="form-group">
        <label for="CategoryId">Category ID</label>
        <input class='form-control' type='number' name="CategoryId" value="@Model.CategoryId"/>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>