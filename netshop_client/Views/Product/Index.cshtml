@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<a  class="btn btn-success pull-right" href='/Product/Create'>Create Product</a>
<table class="table table-hover table-striped table-responsive table-bordered">
	<thead>
		<tr>
			<th>Name</th>
		    <th>Price</th>
		    <th>Category ID</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model) 
		{
        <tr>
			<td>@item.Name</td>
			<td>@item.Price</td>
			<td>@item.CategoryId</td>                  
			<td>
				<a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-default">Edit</a>
				<a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
			</td>
		</tr>
		}
	</tbody>
</table>